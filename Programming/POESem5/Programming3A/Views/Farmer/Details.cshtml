@model Programming3A.Models.FarmerModel
@{
    ViewData["Title"] = "Farmer Details";
}

<div class="bg-mint-light py-4 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-5 text-primary fw-bold">Farmer Details</h1>
                <p class="lead text-muted">Viewing information for @Model.FullName</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Farmers
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h4 class="card-title text-primary mb-4">Farmer Information</h4>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.FarmerId)
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.FarmerId)
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.FullName)
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.FullName)
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.ContactNumber)
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.ContactNumber)
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-primary">
                            @Html.DisplayNameFor(model => model.User)
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.User.Id)
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.FarmerId" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Edit Farmer
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-primary mb-3">Farmer Profile</h5>
                    <div class="text-center">
                        <div class="placeholder-image bg-light rounded-circle d-flex align-items-center justify-content-center mb-3" style="height: 150px; width: 150px; margin: 0 auto;">
                            <i class="bi bi-person text-muted" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="mb-0">@Model.FullName</h5>
                        <p class="text-muted small">Farmer ID: @Model.FarmerId</p>
                    </div>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                <div class="card-body p-4">
                    <h5 class="text-primary">
                        <i class="bi bi-info-circle me-2"></i>Farmer Summary
                    </h5>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2"><i class="bi bi-person-badge me-2"></i> <strong>Name:</strong> @Model.FullName</li>
                        <li class="mb-2"><i class="bi bi-telephone me-2"></i> <strong>Contact:</strong> @Model.ContactNumber</li>
                        <li><i class="bi bi-person-circle me-2"></i> <strong>User ID:</strong> @Model.User.Id</li>
                    </ul>
                    <div class="mt-3">
                        <a asp-action="Products" asp-route-id="@Model.FarmerId" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-basket me-2"></i>View Farmer's Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>