@model IEnumerable<Programming3A.Models.FarmerModel>
@{
    ViewData["Title"] = "Manage Farmers";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">All Farmers</h2>
        <a asp-action="ManageUsers" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>Contact Number</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var farmer in Model)
                        {
                            <tr>
                                <td>@farmer.FullName</td>
                                <td>@farmer.ContactNumber</td>
                                <td>@farmer.User?.Email</td>
                                <td>
                                    <a asp-controller="Farmer" asp-action="Details" asp-route-id="@farmer.FarmerId" class="btn btn-sm btn-outline-info me-2">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-controller="Farmer" asp-action="Edit" asp-route-id="@farmer.FarmerId" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Farmer" asp-action="Delete" asp-route-id="@farmer.FarmerId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" /> 