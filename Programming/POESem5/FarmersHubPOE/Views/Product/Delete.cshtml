@model Programming3A.Models.ProductModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="bg-danger bg-opacity-10 py-4 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-5 text-danger fw-bold">Delete Product</h1>
                <p class="lead text-muted">Are you sure you want to delete this product?</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-action="Index" class="btn btn-outline-danger">
                    <i class="bi bi-arrow-left me-2"></i>Back to Products
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card border-danger border-opacity-25 shadow-sm">
                <div class="card-header bg-danger bg-opacity-10 border-danger border-opacity-25">
                    <h4 class="text-danger m-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Warning: This action cannot be undone
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger">
                        <strong>You are about to permanently delete:</strong> @Model.ProductName
                    </div>
                    
                    <h5 class="card-title text-danger mb-4">Product Information</h5>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-secondary">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.ProductName)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-secondary">
                            @Html.DisplayNameFor(model => model.Category)
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Category)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-secondary">
                            @Html.DisplayNameFor(model => model.Description)
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Description)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-secondary">
                            @Html.DisplayNameFor(model => model.Price)
                        </div>
                        <div class="col-md-8">
                            R @Model.Price.ToString("0.00")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-secondary">
                            @Html.DisplayNameFor(model => model.ProductionDate)
                        </div>
                        <div class="col-md-8">
                            @Model.ProductionDate.ToString("yyyy-MM-dd")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold text-secondary">
                            Farmer
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Farmer.FullName)
                        </div>
                    </div>

                    <hr class="my-4" />

                    <form asp-action="Delete" class="text-end">
                        <input type="hidden" asp-for="ProductId" />
                        <a asp-action="Index" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-2"></i>Delete Product
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-danger mb-3">Product Image</h5>
                    <div class="text-center">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
